{
  "manifest_version": 3,
  "name": "Vilify",
  "version": "0.1.0",
  "description": "Vim-style focus mode for websites",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

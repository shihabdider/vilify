{
  "manifest_version": 3,
  "name": "Vilify",
  "version": "0.6.42",
  "description": "Vim-style focus mode for websites",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "32": "icons/icon-gray-32.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": ["clipboardWrite", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*", "*://www.google.com/search*", "*://google.com/search*"],
      "js": ["dist/data-bridge.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*", "*://www.google.com/search*", "*://google.com/search*"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}

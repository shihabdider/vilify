{
  "manifest_version": 3,
  "name": "Vilify",
  "version": "0.3.15",
  "description": "Vim-style focus mode for websites",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Vilify",
  "version": "0.1.2",
  "description": "Vim-style command palette for websites",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/content.js"],
      "css": ["core/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
